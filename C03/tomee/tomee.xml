<?xml version="1.0" encoding="UTF-8"?>
<tomee>
  <Resource id="DadJmsRA" type="ActiveMQResourceAdapter">
    ServerUrl = failover:(tcp://c02:61616)?initialReconnectDelay=1000&amp;maxReconnectDelay=30000&amp;useExponentialBackOff=true
    UserName  = dad
    Password  = dad
  </Resource>

  <Container id="MyMdbContainer" type="MESSAGE">
    ResourceAdapter = DadJmsRA
  </Container>

  <!-- Inbound CF: used only by MDB consumer -->
  <Resource id="jms/InboundConnectionFactory" type="jakarta.jms.ConnectionFactory">
    ResourceAdapter = DadJmsRA
  </Resource>

  <!-- Outbound CF: used only for publishing job-done -->
  <Resource id="jms/OutboundConnectionFactory" type="jakarta.jms.ConnectionFactory">
    ResourceAdapter = DadJmsRA
    ClientID = c03Publisher
  </Resource>

  <Resource id="jms/bmpTopic" type="jakarta.jms.Topic">
    PhysicalName = bmp.topic
  </Resource>

  <Resource id="jms/jobDoneQueue" type="jakarta.jms.Queue">
    PhysicalName = job.done.queue
  </Resource>
</tomee>
